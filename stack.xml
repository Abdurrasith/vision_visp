  <depend stack="driver_common" /> <!-- dynamic_reconfigure -->
  <depend stack="geometry" /> <!-- tf -->
  <depend stack="image_common" /> <!-- image_transport, camera_calibration_parsers -->
  <depend stack="image_pipeline" /> <!-- image_proc -->
  <depend stack="ros" />
